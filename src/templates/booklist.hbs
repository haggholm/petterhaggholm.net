<h2>
    <small class="pull-right">
        <a href="/reviews" title="RSS feed of my reviews" target="_blank">
            <span class="sr-only">RSS feed</span>
            <span class="fa fa-rss"></span>
        </a>
    </small>
  Some books Iâ€™ve read
</h2>

<div id="bookTableContainer" class="dynamically-hidden">
    <table id="bookTable" class="table table-striped table-hover">
        <thead>
        <tr>
            <th class="title-col">Title</th>
            <th class="author-col">Author(s)</th>
            <th class="series-col">Series/volume</th>
            <th class="rating-col">Rating</th>
            <th class="hidden-title hidden">Title (sort)</th>
            <th class="hidden-author hidden">Author(s) (sort)</th>
            <th class="hidden-series hidden">Series/volume</th>
            <th class="hidden-rating hidden">Rating (sort)</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <td class="title-col">
                <input class="form-control" type="text" placeholder="Filter by title"/>
            </td>
            <td class="author-col">
                <input class="form-control" type="text" placeholder="Filter by author"/>
            </td>
            <td class="series-col">
                <input class="form-control" type="text" placeholder="Filter by series"/>
            </td>
            <td class="rating-col">
                <input type="hidden" class="dummy"/>
            </td>

            <td class="hidden-title hidden">
                <input type="hidden" class="dummy"/>
            </td>
            <td class="hidden-author hidden">
                <input type="hidden" class="dummy"/>
            </td>
            <td class="hidden-series hidden">
                <input type="hidden" class="dummy"/>
            </td>
            <td class="hidden-rating hidden">
                <input type="hidden" class="dummy"/>
            </td>
        </tr>
        </tfoot>
        <tbody>
        {{#book_data}}
        <tr>
            <td>
                <ul class="list-unstyled">
                    <li>
                        <a href="/books/{{id}}">{{english_title}}</a>
                    </li>
                    {{! if book.title != book.english_title }}
                    <li class="text-muted">{{title}}</li>
                    {{! endif }}
                </ul>
            </td>
            <td>
                <ul class="list-unstyled">
                    {{#authors}}
                    <li><a href="javascript:void(0)">{{name}}</a></li>
                    {{/authors}}
                </ul>
            </td>
            <td>
                {{#volume}}
                  <a href="javascript:void(0)">{{series_title}}</a> {{volume}}
                {{/volume}}
            </td>
            <td>
              <span class="pull-right">
                {{#has_review}}
                  <a href="/books/{{id}}"
                     class="fa fa-comment"
                     title="Read review"></a>
                {{/has_review}}
                {{! rating_link book.id book.rating }}
              </span>
            </td>
            <td class="hidden">
              {{english_title}}
              {{! book.english_title|strip_the }}
            </td>
            <td class="hidden">
              {{authors.length}}
              {{#authors}}
                {{name}}
              {{/authors}}
            </td>
            <td class="hidden">
              {{#volume}}
                {{! book.series_title|strip_the }}{{! book.volume|stringformat:"03i" }}
                {{series_title}}{{volume}}
              {{/volume}}
            </td>
            <td class="hidden">
              {{#rating}}rating{{/rating}}
              {{^rating}}-1{{/rating}}
            </td>
        </tr>
        {{/book_data}}
        </tbody>
    </table>
</div>
